<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    @Scripts.Render("~/bundles/jquery")

    @Styles.Render("~/Content/admin/css")
    @RenderSection("styles", required: false)
    <script type="text/javascript" src="~/Scripts/plugins/jquery.treeTable.js"></script>
   
</head>
<body>
    <header id="header">
        <div class="clearfix">
            <div class="left">
                <p class="site-title">@Html.ActionLink("Backend", "Index", "Home")</p>
            </div>
            <div class="right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
        <nav class="clearfix">
            <ul id="menu">
                <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "button" })</li>
                <li>@Html.ActionLink("Content", "Index", "Content", null, new { @class = "button" })</li>
                <li>@Html.ActionLink("Config", "Config", "Home", null, new { @class = "button" })</li>
            </ul>
        </nav>
    </header>
    <div id="main-container">
        <aside id="sidebar">
            @Html.Partial("SidebarMenu")
            @RenderSection("sidebar", false)
        </aside>
        <article id="main">
            <div id="radioset">
                <input type="radio" id="radio1" name="radio" /><label for="radio1">Choice 1</label>
                <input type="radio" id="radio2" name="radio" checked="checked" /><label for="radio2">Choice 2</label>
                <input type="radio" id="radio3" name="radio" /><label for="radio3">Choice 3</label>
            </div>
            @RenderBody()
        </article>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>
                    &copy; @DateTime.Now.Year - My ASP.NET MVC Application
                </p>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-ui-1.8.16.custom.min.js" type="text/javascript"></script>

    <script src="~/Scripts/App.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)

    @{
        var pageName = ViewContext.RouteData.Values["action"].ToString();
        if (string.Compare(pageName, "Edit") == 0 || string.Compare(pageName, "Create") == 0)
        {
        <script src="~/Scripts/plugins/editor/kindeditor-min.js" type="text/javascript"></script>
        <script src="~/Scripts/plugins/editor/lang/zh_CN.js" type="text/javascript"></script>
        }
    }
     <script type="text/ecmascript">
         $(function () {
             $(".tree").each(function () {
                 $(this).treeTable();
             });
             $(".st_tree").SimpleTree({
                 click: function (a) {
                     window.location.href = a.href;
                 }
             });
         });
    </script>

</body>
</html>

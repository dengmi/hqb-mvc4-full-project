@model Models.Article

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Content", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Article</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.TypeId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeId)
            @Html.ValidationMessageFor(model => model.TypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Summary)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Summary)
            @Html.ValidationMessageFor(model => model.Summary)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AllowComment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AllowComment)
            @Html.ValidationMessageFor(model => model.AllowComment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Published)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Published)
            @Html.ValidationMessageFor(model => model.Published)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Favor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Favor)
            @Html.ValidationMessageFor(model => model.Favor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsTop)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsTop)
            @Html.ValidationMessageFor(model => model.IsTop)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryId, "Category")
        </div>
        <div class="editor-field">
            @CategoryHelper.RenderAllTreeCategories("CategoryId", 0)
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Image)
        </div>
        <div class="editor-field">
            <input id="Upload" type="file" data-allow-ext=".jpg,.png,.gif,.bmp" name="Upload" />
            @Html.HiddenFor(model => model.Image)
            @Html.ValidationMessageFor(model => model.Image)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $("#Upload").change(function () {
                alert($(this).val());
                $("#Image").val($(this).val());
            });
        });
    </script>
}
